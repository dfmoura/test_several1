	<variable name="TOTAL_SERVICO" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[($F{USOPROD}.toString().equals("S")?$F{TOTALITEM}:new BigDecimal(0))]]></variableExpression>
