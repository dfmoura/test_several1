# ===============================================
# Configurações do Servidor Local
# ===============================================
NODE_ENV=development
PORT=3000
DEBUG=true

# ===============================================
# Frontend (Vite) - Chaves expostas ao navegador
# ===============================================
VITE_SUPABASE_URL="VITE_SUPABASE_URL"
VITE_SUPABASE_ANON_KEY="VITE_SUPABASE_ANON_KEY"

# ===============================================
# Backend (Node.js / Netlify Functions) - Chaves secretas
# ===============================================

# --- Supabase (para backend) ---
SUPABASE_URL="SUPABASE_URL"
SUPABASE_ANON_KEY="SUPABASE_ANON_KEY"
# SUPABASE_SERVICE_ROLE_KEY="INSIRA_SUA_CHAVE_SERVICE_ROLE_SECRETA_DO_SUPABASE_AQUI_SE_PRECISAR"

# --- SANKHYA ERP (Sandbox) ---
SANKHYA_BASE_URL="https://api.sandbox.sankhya.com.br"
SANKHYA_API_TOKEN="SANKHYA_API_TOKEN"
SANKHYA_APP_KEY="SANKHYA_APP_KEY"
SANKHYA_USERNAME="SANKHYA_USERNAME"
SANKHYA_PASSWORD="SANKHYA_PASSWORD"

# --- MERCOS ERP (Sandbox) ---
MERCOS_BASE_URL="https://sandbox.mercos.com/api/v2"
MERCOS_APPLICATION_TOKEN="5MERCOS_APPLICATION_TOKEN"
MERCOS_COMPANY_TOKEN="MERCOS_COMPANY_TOKEN"

# --- Banco de Dados ---
# Geralmente o Supabase já lida com isso, mas se você tiver outro banco, preencha aqui.
DATABASE_URL="INSIRA_SUA_URL_DATABASE_AQUI_SE_FOR_DIFERENTE_DO_SUPABASE"

# ===============================================
# Configurações Adicionais da Aplicação
# ===============================================

# --- Sincronização ---
SYNC_INTERVAL_HOURS=1
MAX_RETRY_ATTEMPTS=3
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# --- Notificações por Email ---
SMTP_HOST="INSIRA_SEU_SMTP_HOST_AQUI"
SMTP_PORT=587
SMTP_USER="INSIRA_SEU_EMAIL_SMTP_AQUI"
SMTP_PASS="INSIRA_SUA_SENHA_APP_EMAIL_AQUI"
ALERT_EMAIL="INSIRA_SEU_EMAIL_ADMIN_AQUI"

# --- Segurança ---
JWT_SECRET="GERAR_UMA_CHAVE_SECRETA_FORTE_PARA_JWT"